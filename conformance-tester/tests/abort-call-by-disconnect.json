{
    "name": "abort-call-by-disconnect",
    "description": "Abort a call by disconnecting the caller",
    "long-description": "A client makes a call and then disconnects. The broker must abort the call implicitly.",
    "version": "1.16",
    "message-types": [
        "abort-function-call",
        "call-function",
        "call-function-reply"
    ],
    "steps": [
        {
            "type": "connect",
            "client": "caller",
            "version": "1.16"
        },
        {
            "type": "connect",
            "client": "callee",
            "version": "1.16"
        },
        {
            "type": "create-object",
            "client": "callee",
            "uuid": "00000000-0000-0000-0000-000000000001",
            "cookie": "set:object"
        },
        {
            "type": "create-service",
            "client": "callee",
            "object-cookie": "get:object",
            "service-uuid": "00000000-0000-0000-0000-000000000002",
            "service-cookie": "set:service",
            "version": 0
        },
        {
            "type": "send",
            "client": "caller",
            "message": "call-function",
            "serial": 0,
            "service-cookie": "get:service",
            "function": 0,
            "value-type": "none"
        },
        {
            "type": "receive",
            "client": "callee",
            "message": "call-function",
            "serial": "set:call",
            "service-cookie": "get:service",
            "function": 0,
            "value-type": "none"
        },
        {
            "type": "remove-client",
            "client": "caller"
        },
        {
            "type": "receive",
            "client": "callee",
            "message": "abort-function-call",
            "serial": "get:call"
        },
        {
            "type": "send",
            "client": "callee",
            "message": "call-function-reply",
            "serial": "get:call",
            "result": "aborted"
        }
    ]
}
