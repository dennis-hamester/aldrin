service Downloader {
    uuid = 9fa21359-5f0e-432f-ab79-43b815e8063b;
    version = 1;

    fn download @ 1 {
        args = struct {
            required name @ 1 = string;
            required size @ 2 = u64;
        }

        ok = sender<Chunk>;
    }
}

enum Chunk {
    /// Consecutive chunks of the file.
    Data @ 1 = bytes;

    /// The SHA-256 of the file.
    Done @ 2 = Sha256;
}

newtype Sha256 = [u8; 32];
